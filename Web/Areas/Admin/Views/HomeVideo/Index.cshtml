@using Web.Areas.Admin.ViewModels.HomeVideo
@model HomeVideoIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">HomeVideo Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (Model.HomeVideo != null)
            {
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Photo</th>
                            <th>Url</th>
                            <th colspan="2" style="text-align:center">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td><img style="width:100px; height:50px; object-fit:contain; justify-content:flex-start" src="~/assets/img/@Model.HomeVideo.PhotoName" /></td>
                            <td>@Model.HomeVideo.VideoUrl</td>
                            <td width="20px">
                                <a asp-action="update" asp-controller="homevideo" asp-route-id="@Model.HomeVideo.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="homevideo" asp-route-id="@Model.HomeVideo.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    </tbody>
                </table>
            }
            else
            {
                <a class="btn btn-primary mb-3" asp-action="create" asp-controller="homevideo">Create HomeVideo</a>
            }
        </div>
    </div>
</div>