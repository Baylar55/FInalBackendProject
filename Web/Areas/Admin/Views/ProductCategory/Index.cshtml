@using Web.Areas.Admin.ViewModels.ProductCategory
@model ProductCategoryIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Product Category Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="productcategory">Create product category</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var category in Model.ProductCategories)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Title</td>
                            <td>@category.CreatedAt.ToString("dddd, dd MMMM yyyy")</td>
                            <td>@category.ModifiedAt.ToString("dddd, dd MMMM yyyy")</td>
                            <td width="20px">
                                <a asp-action="update" asp-controller="productcategory" asp-route-id="@category.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="productcategory" asp-route-id="@category.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>