@using Web.Areas.Admin.ViewModels.OurVision
@model OurVisionIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Our Vision Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="ourvision">Create Vision</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Photo</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var vision in Model.OurVisions)
                    {
                        <tr>
                            <td>@vision.Id</td>
                            <td><img style="width:80px; height:80px; object-fit:contain; justify-content:flex-start" src="~/assets/img/@vision.PhotoName" /></td>
                            <td>@Html.Raw(vision.Title)</td>
                            <td>@Html.Raw(vision.Description)</td>
                            <td width="20px">
                                <a asp-action="update" asp-controller="ourvision" asp-route-id="@vision.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="ourvision" asp-route-id="@vision.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                            @*<td width="20px">
                                <a asp-action="details" asp-controller="ourvision" asp-route-id="@vision.Id" class="btn btn-info">Details</a>
                            </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>