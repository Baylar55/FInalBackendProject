@using Web.Areas.Admin.ViewModels.Statistics
@model StatisticsIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Our statistic Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="statistics">Create Statistics</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Quantity</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var statistic in Model.Statistics)
                    {
                        <tr>
                            <td>@statistic.Id</td>
                            <td>@Html.Raw(statistic.Title)</td>
                            <td>@statistic.Quantity</td>
                            <td width="20px">
                                <a asp-action="update" asp-controller="statistics" asp-route-id="@statistic.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="statistics" asp-route-id="@statistic.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>