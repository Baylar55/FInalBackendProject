@using Web.Areas.Admin.ViewModels.Doctor
@model DoctorDetailsVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Doctor Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tbody>
                    <tr>
                        <th>Photo</th>
                        <td><img style="width:100px; height:100px; object-fit:contain; justify-content:flex-start" src="~/assets/img/@Model.PhotoName" /></td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>Speciality</th>
                        <td>@Model.Specialty</td>
                    </tr>
                    <tr>
                        <th>Qualification</th>
                        <td>@Model.Qualification</td>
                    </tr>
                    <tr>
                        <th style="vertical-align:middle;">Contact Info</th>
                        <td>@Html.Raw(Model.ContactInfo)</td>
                    </tr>
                    <tr>
                        <th style="vertical-align:middle;">Working Time</th>
                        <td>@Html.Raw(Model.WorkingTime)</td>
                    </tr>
                    <tr>
                        <th style="vertical-align:middle; text-align:center;">Skill</th>
                        <td>@Html.Raw(Model.Skill)</td>
                    </tr>
                    <tr>
                        <th>Intorducting SubTitle</th>
                        <td>@Html.Raw(Model.IntroductingSubTitle)</td>
                    </tr>
                    <tr>
                        <th style="vertical-align:middle;">Introducting Text</th>
                        <td>@Html.Raw(Model.IntroductingText)</td>
                    </tr>
                    <tr>
                        <th>Created At</th>
                        <td>@Model.CreatedAt.ToString("dddd, dd MMMM yyyy")</td>
                    </tr>
                    <tr>
                        <th>Modified At</th>
                        <td>@Model.ModifiedAt.ToString("dddd, dd MMMM yyyy")</td>

                    </tr>
                </tbody>
                <a asp-action="index" asp-controller="doctor" class="btn btn-info mb-2">Go to Back</a>
            </table>
        </div>
    </div>
</div>
