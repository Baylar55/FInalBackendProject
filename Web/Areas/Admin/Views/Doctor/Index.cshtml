@using Web.Areas.Admin.ViewModels.Doctor
@model DoctorIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Doctor Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="doctor">Create Doctor</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Speciality</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var doctor in Model.Doctor)
                    {
                        <tr>
                            <td>@doctor.Id</td>
                            <td><img style="width:100px; height:100px; object-fit:contain; justify-content:flex-start" src="~/assets/img/@doctor.PhotoName" /></td>
                            <td>@doctor.Name</td>
                            <td>@doctor.Speciality</td>
                            <td width="20px">
                                <a asp-action="update" asp-controller="doctor" asp-route-id="@doctor.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="doctor" asp-route-id="@doctor.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                            <td width="20px">
                                <a asp-action="details" asp-controller="doctor" asp-route-id="@doctor.Id" class="btn btn-info">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>