@using Web.Areas.Admin.ViewModels.AboutUs
@model AboutUsIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">About Us Table</h6>
    </div>
    <div class="card-body">
        @if (Model.About != null)
        {
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Signature Photo</th>
                            <th>Sub Title</th>
                            <th>Title</th>
                            <th colspan="3" style="text-align:center">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>@Model.About.Id</td>
                            <td><img style="width:90px; height:70px; object-fit:contain; justify-content:flex-start" src="~/assets/img/@Model.About.SignaturePhotoName" /></td>
                            <td class="align-middle">@Html.Raw(Model.About.SubTitle)</td>
                            <td class="align-middle">@Html.Raw(Model.About.Title)</td>
                            <td width="20px">
                                <a asp-action="update" asp-controller="aboutus" asp-route-id="@Model.About.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="aboutus" asp-route-id="@Model.About.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                            <td width="20px">
                                <a asp-action="details" asp-controller="aboutus" asp-route-id="@Model.About.Id" class="btn btn-info">Details</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="aboutus">Create About Us</a>
        }
    </div>
</div>