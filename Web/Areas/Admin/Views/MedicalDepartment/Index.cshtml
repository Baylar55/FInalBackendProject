@using Web.Areas.Admin.ViewModels.MedicalDepartment
@model MedicalDepartmentIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Medical Departments Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="medicaldepartment">Create Medical Department</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Photo</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var department in Model.MedicalDepartments)
                    {
                        <tr>
                            <td>@department.Id</td>
                            <td><img style="width:100px; height:100px; object-fit:contain; justify-content:f lex-start" src="~/assets/img/@department.PhotoName" /></td>
                            <td class="align-middle">@Html.Raw(department.Title)</td>
                            <td class="align-middle">@Html.Raw(department.Description)</td>
                            <td class="align-middle" width="20px">
                                <a asp-action="update" asp-controller="medicaldepartment" asp-route-id="@department.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td class="align-middle" width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="medicaldepartment" asp-route-id="@department.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>