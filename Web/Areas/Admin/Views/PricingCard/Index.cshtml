@using Web.Areas.Admin.ViewModels.PricingCard
@model PricingCardIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Pricing Card Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="pricingcard">Create Pricing Card</a>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>SubTitle</th>
                        <th colspan="3" style="text-align:center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var card in Model.PricingCards)
                    {
                        <tr>
                            <td>@card.Id</td>
                            <td>@Html.Raw(card.Title)</td>
                            <td>@Html.Raw(card.SubTitle)</td>
                            <td width="20px">
                                <a asp-action="update" asp-controller="pricingcard" asp-route-id="@card.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="pricingcard" asp-route-id="@card.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                            <td width="20px">
                                <a asp-action="details" asp-controller="pricingcard" asp-route-id="@card.Id" class="btn btn-info">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>