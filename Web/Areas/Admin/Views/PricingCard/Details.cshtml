@using Web.Areas.Admin.ViewModels.PricingCard
@model PricingCardDetailsVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Pricing Card Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tbody>
                    <tr>
                        <th>Title</th>
                        <td>@Html.Raw(Model.Title)</td>
                    </tr>
                    <tr>
                        <th>Subtitle</th>
                        <td>@Html.Raw(Model.SubTitle)</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>@Model.PriceValue @Model.PriceUnit / per @Model.PricePer</td>
                    </tr>
                    <tr>
                        <th style="vertical-align:middle;">Features</th>
                        <td>@Html.Raw(Model.Features)</td>
                    </tr>
                    <tr>
                        <th style="vertical-align:middle;">Features</th>
                        <td>@Html.Raw(Model.Status)</td>
                    </tr>
                    <tr>
                        <th>Created At</th>
                        <td>@Model.CreatedAt.ToString("dddd, dd MMMM yyyy")</td>
                    </tr>
                    <tr>
                        <th>Modified At</th>
                        <td>@Model.ModifiedAt.ToString("dddd, dd MMMM yyyy")</td>
                    </tr>
                </tbody>
                <a asp-action="index" asp-controller="pricingcard" class="btn btn-info mb-2">Go to Back</a>
            </table>
        </div>
    </div>
</div>
