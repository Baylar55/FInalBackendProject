@using Core.Constants;
@using Core.Entities;
@using Web.Areas.Admin.ViewModels.WhyChoose
@model WhyChooseUpdateVM;

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Create Why Choose Us
                        </p>
                        <form method="post" enctype="multipart/form-data" asp-action="update" asp-controller="whychoose">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <textarea class="form-control" asp-for="Title"></textarea>
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea class="form-control" asp-for="Description"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Check">Checks</label>
                                <textarea class="form-control" asp-for="Check"></textarea>
                                <span class="text-danger" asp-validation-for="Check"></span>
                            </div>

                          @*  <div class="form-group">
                                <label asp-for="SatisfiedPatientsCount">Satisfied Patients Count</label>
                                <input class="form-control" asp-for="SatisfiedPatientsCount">
                                <span class="text-danger" asp-validation-for="SatisfiedPatientsCount"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="DoctorsCount">Doctors Count</label>
                                <input class="form-control" asp-for="DoctorsCount">
                                <span class="text-danger" asp-validation-for="DoctorsCount"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Quality">Quality</label>
                                <input class="form-control" asp-for="Quality">
                                <span class="text-danger" asp-validation-for="Quality"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Experience">Experience (Year)</label>
                                <input class="form-control" asp-for="Experience">
                                <span class="text-danger" asp-validation-for="Experience"></span>
                            </div>*@

                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input class="form-control" asp-for="Photo">
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="https://cdn.ckeditor.com/4.20.1/full/ckeditor.js"></script>

<script>

    const properties = ["Title", "Description", "Check"]

    properties.forEach(function (element) {
        CKEDITOR.replace(`${element}`);
    })

</script>
