@using Web.Areas.Admin.ViewModels.WhyChoose
@model WhyChooseIndexVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Why Choose Table</h6>
    </div>
    <div class="card-body">
        @if (Model.WhyChoose != null)
        {
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Photo</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th colspan="3" style="text-align:center">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>@Model.WhyChoose.Id</td>
                            <td><img style="width:100px; height:100px; object-fit:contain; vertical-align:middle; justify-content:flex-start" src="~/assets/img/@Model.WhyChoose.PhotoName" /></td>
                            <td style="vertical-align:middle">@Html.Raw(Model.WhyChoose.Title)</td>
                            <td style="vertical-align:middle">@Html.Raw(Model.WhyChoose.Description)</td>
                            <td style="vertical-align:middle" width="20px">
                                <a asp-action="update" asp-controller="whychoose" asp-route-id="@Model.WhyChoose.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td style="vertical-align:middle" width="20px">
                                <form method="post">
                                    <button asp-action="delete" asp-controller="whychoose" asp-route-id="@Model.WhyChoose.Id" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                            <td style="vertical-align:middle" width="20px">
                                <a asp-action="details" asp-controller="whychoose" asp-route-id="@Model.WhyChoose.Id" class="btn btn-info">Details</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <a class="btn btn-primary mb-3" asp-action="create" asp-controller="whychoose">Create Why hoose</a>
        }
    </div>
</div>
